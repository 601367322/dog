<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.quanliren.quan_two.custom.RoundAngleImageView
            android:id="@+id/userlogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            app:roundHeight="5dp"
            app:roundWidth="5dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@id/userlogo"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/userlogo"
            android:ellipsize="end"
            android:text="哈哈哈"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/quan_username"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignTop="@id/username"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/username"
            android:background="@drawable/girl_icon"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_alignLeft="@id/username"
            android:layout_below="@id/username"
            android:gravity="center_vertical"
            android:text="兵书书uzengsong是那个离开角色"
            android:textColor="@color/signature"
            android:textSize="14sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:gravity="right|bottom"
            android:textColor="@color/title_press_txt"
            android:layout_alignLeft="@id/username"
            android:layout_below="@id/desc"
            android:text=">详情"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/drivers_height"
        android:background="@drawable/seting_drivers" />

</LinearLayout>