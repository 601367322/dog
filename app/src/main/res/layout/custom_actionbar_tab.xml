<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abc_action_bar_default_height_material"
    android:layout_alignParentTop="true"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_alignParentBottom="true"
        android:background="@drawable/actionbar_drawable"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/left_btn"
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:background="@drawable/button_bg_selector_material"
            android:src="@drawable/actionbar_homeasup_indicator"
            android:visibility="gone">

        </ImageButton>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/left_tab"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/actionbar_tab_left_btn_bg"
                android:clickable="true"
                android:gravity="center"
                android:textColor="@color/actionbar_tab_left_text_color" />

            <Button
                android:id="@+id/right_tab"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/actionbar_tab_right_btn_bg"
                android:clickable="true"
                android:gravity="center"
                android:textColor="@color/actionbar_tab_left_text_color" />
        </LinearLayout>
        <Button
            android:id="@+id/right_btn"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/abc_action_bar_default_height_material"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:background="@drawable/button_bg_selector_material"
            android:textColor="@color/abc_primary_text_material_light"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="16sp"/>
    </RelativeLayout>
</RelativeLayout>
