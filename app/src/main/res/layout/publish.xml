<?xml version="1.0" encoding="utf-8"?>
<com.quanliren.quan_two.custom.CustomRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:id="@+id/rlayout"
    android:background="@color/activity_bg"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionbar"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_btm_selector"
                    android:minHeight="100dp"
                    android:orientation="vertical">

                    <com.quanliren.quan_two.custom.emoji.EmoticonsEditText
                        android:id="@+id/text"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="说点什么..."
                        ptr:maxlen="150"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="textMultiLine"
                        android:minHeight="100dip"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/add_emoji_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/chat_face_btn_normal" />
                </LinearLayout>


                <fragment
                    android:id="@+id/picFragment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:name="com.quanliren.quan_two.fragment.custom.AddPicFragment_" />
            </LinearLayout>
        </ScrollView>

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/emoji_pop" />
    </LinearLayout>

</com.quanliren.quan_two.custom.CustomRelativeLayout>