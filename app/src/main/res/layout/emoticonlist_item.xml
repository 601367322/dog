<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@drawable/list_item_bg_selector_material"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:scaleType="centerCrop"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/title" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/signature"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

    <Button
        android:id="@+id/buy"
        android:layout_width="55dp"
        android:layout_marginLeft="8dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:background="@drawable/button_bg_selector_buy_vip_material"
        android:focusable="false"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/buied"
        android:visibility="gone"
        android:layout_marginLeft="8dp"
        android:layout_height="30dp"
        android:src="@drawable/emotionstore_downloaded_iocn"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:layout_width="55dp" />
</LinearLayout>