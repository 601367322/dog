<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abc_action_bar_default_height_material"
    android:background="@color/actionbar">

    <LinearLayout
        android:id="@+id/title_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:minWidth="@dimen/title_height"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/title_left_txt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="100dp"
            android:singleLine="true"
            android:textColor="@color/actionbar_left_btn_color"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/title_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:visibility="gone"
        android:gravity="center"
        android:minWidth="@dimen/title_height"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/title_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="100dp"
            android:singleLine="true"
            android:textColor="@color/actionbar_right_btn_color"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>