<resources>

    <style name="AppBaseThemeTranslucent" parent="AppBaseThemeNoAnimation">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppBaseThemeNoAnimation" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.AppCompat.Light.ActionBar.My</item>
        <item name="actionMenuTextAppearance">@style/MyABmenuTextAppearance</item>
        <item name="actionMenuTextColor">@color/abc_primary_text_material_light</item>
        <item name="colorPrimaryDark">@color/ripple_material_dark</item>
        <item name="colorPrimary">@color/nav_press_txt</item>
        <item name="colorAccent">@color/nav_press_txt</item>
        <item name="homeAsUpIndicator">@drawable/actionbar_homeasup_indicator</item>
        <item name="numberPickerStyle">@style/NPWidget.Holo.Light.NumberPicker</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="FullBleedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="homeAsUpIndicator">@drawable/actionbar_homeasup_indicator</item>
        <item name="actionMenuTextColor">@color/abc_primary_text_material_light</item>
        <item name="actionBarStyle">@style/Widget.AppCompat.Light.ActionBar.My</item>
        <item name="actionMenuTextAppearance">@style/MyABmenuTextAppearance</item>
        <item name="colorPrimaryDark">@color/ripple_material_dark</item>
        <item name="colorPrimary">@color/nav_press_txt</item>
        <item name="colorAccent">@color/nav_press_txt</item>
        <item name="numberPickerStyle">@style/NPWidget.Holo.Light.NumberPicker</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="mytoolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextStyle">@style/actionbar.title.style</item>
        <item name="subtitleTextStyle">@style/actionbar.subtitle.style</item>
        <item name="displayOptions">homeAsUp|showTitle</item>
        <item name="indeterminateProgressStyle">@style/IndeterminateProgress</item>
    </style>

    <style name="WhiteIconAndWords" parent="TransparentAppBaseTheme">
        <item name="homeAsUpIndicator">@drawable/ic_action_navigation_arrow_back_white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>

        <!-- Required for Lollipop. -->
    </style>

    <style name="AppBaseThemeNoHomeAsUp" parent="AppBaseThemeNoAnimation">
        <item name="actionBarStyle">@style/Widget.AppCompat.Light.ActionBar.My.NoHomeAsUp</item>
        <item name="homeAsUpIndicator">@drawable/home_as_up_indicatosr</item>
        <!--<item name="android:windowNoTitle">true</item>-->
    </style>

    <style name="TransparentAppBaseTheme" parent="AppBaseThemeTranslucent">
        <!-- API 14 theme customizations can go here. -->
        <item name="windowActionBarOverlay">true</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>


    <style name="FullBleedThemeNoTrans" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AlertDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/popup_bg</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!--<item name="android:windowFrame">@null</item>-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/alltransparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!--
    <style name="MyDialogStyleBottom" parent="@android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    -->
    <style name="ScaleAnimationActivity" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/scale_in</item>
        <item name="android:activityCloseExitAnimation">@anim/scale_out</item>
    </style>

    <style name="TranslucentActivity" parent="AppBaseThemeTranslucent">
        <item name="android:windowAnimationStyle">@style/ScaleAnimationActivity</item>
        <!--<item name="android:windowFrame">@null</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="font_big_dark_gray">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/font_dark_gray</item>
    </style>

    <style name="listviewStyle" parent="Widget.AppCompat.ListView">

    </style>

    <style name="red_line_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
</resources>